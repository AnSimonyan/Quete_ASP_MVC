@model Quete_ASP_MVC.Models.Article
@{

    Layout = "_Layout";
    ViewData["Title"] = "AddArticles";
}


<body>
    <div class="container mt-5">
        <h3>Add new article</h3>
        <form asp-action="SubmitForm" method="post" formnovalidate="formnovalidate">
            <div class="form-group">
                
                <label asp-for="Title" class="control-label"> Title</label>
                
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" ,  @placeholder = "Enter content of article" })
                @Html.ValidationMessageFor(m => m.Title)
                               
                
            </div>
            <div class="form-group">
                <label for="Content">Content:</label>
                @Html.TextBoxFor(m => m.Content, new { @class = "form-control", @placeholder = "Enter content of article" })
                @Html.ValidationMessageFor(m => m.Content)
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
        </form>


    </div>

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</html>


 
